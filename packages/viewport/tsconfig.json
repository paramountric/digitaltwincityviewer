{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "noEmit": true,
    "outDir": "dist",
    "module": "esnext",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "paths": {
      "@luma.gl/*": ["./node_modules/@luma.gl/*"],
      "@deck.gl/*": ["./node_modules/@deck.gl/*"]
    },
    "baseUrl": "."
  },
  "include": ["src", "index.d.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
