{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dtcv-next-template-dev": "turbo run dev --scope 'dtcv-next-template' --include-dependencies",
    "dtcv-maplibre-example-dev": "turbo run dev --scope 'dtcv-maplibre-example' --include-dependencies",
    "dtcc-cfd-vertical-dev": "turbo run dev --filter dtcc-cfd-vertical...",
    "dtcc-task-flow-dev": "turbo run dev --filter dtcc-task-flow...",
    "dtcc-file-viewer-dev": "turbo run dev --filter dtcc-file-viewer...",
    "dev:dte": "turbo run dev --filter dte-digital-twin-energy",
    "dev:circularity": "turbo run dev --filter dtcc-circularity-viewer...",
    "trecim-dev": "turbo run dev --filter trecim...",
    "dtcv-website-dev": "turbo run dev --filter dtcv-website...",
    "publish-packages": "turbo run build && changeset version && changeset publish"
  },
  "devDependencies": {
    "turbo": "^1.6.3"
  },
  "dependencies": {
    "@changesets/cli": "^2.25.2"
  },
  "packageManager": "pnpm@8.3.1"
}
