{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dtcv#build": {
      "dependsOn": ["^build"],
      "env": ["SUPABASE_PRIVATE_KEY"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "docs#build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "dev": {
      "cache": false
    }
  }
}
